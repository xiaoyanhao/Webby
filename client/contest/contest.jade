template(name='webby_contest')
  .webby-contest
    header
      h3.area-title 竞赛区
      .area-describe 以代码为剑，杀出一片天地


    .outer-wrapper
      ul.tabs
        li.tab.active
          a(href='#') 正在进行
        li.tab
          a(href='#') 即将到来
        li.tab
          a(href='#') 已经结束

      .inner-wrapper
        +contest_list

template(name='contest_list')
  .contest-list
  each contest_item in contest_items
    .contest-item
      .left-column
        .left-column-content.num
          .num-of-participant
            a(href='#')
              div
                i.fa.fa-user
              div #{contest_item.num_of_participant}

          .apply-area
            a(href='#') 报名

      .middle-column
        .contest-title
          a(href='#') #{contest_item.title}
        .author-info
          img.author-avatar(src='#{contest_item.avatar}')
          span.author-name
            a(href='#') #{contest_item.author_name}
          span 发布

      .right-column
        .start-time
          i.fa.fa-calendar
          span.time #{contest_item.start_time}
          span.label 开始

        .end-time
          span.time #{contest_item.end_time}
          span.label 结束

  ul.pagination
    li
      a(href='#')
        i.fa.fa-angle-left
    li.active
      a(href='#') 1
    li.waves-effect
      a(href='#') 2
    li.waves-effect
      a(href='#') 3
    li.waves-effect
      a(href='#') 4
    li.waves-effect
      a(href='#') 5
    li.waves-effect
      a(href='#')
      i.fa.fa-angle-right